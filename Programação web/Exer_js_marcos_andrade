<!--EXERCICIO 08--> 

<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <script>
        let  degrau, altura, quant;
		altura = parseFloat(prompt("Digite a altura que deseja alcançar com a escada em metros: "));
        degrau = parseFloat(prompt("Digite a altura do degrau em metros: "));
        quant = (altura/degrau);
        alert("A escada terá que ter " + quant + " degraus" ) ;
    </script>
</body>
</html>

<!--EXERCICIO 09--> 

<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <script>
        let  salario, salario_aumento;
		salario = parseFloat(prompt("Digite o salario atual do funcionario: "));
		if (salario < 2500)
		{
			salario_aumento = (salario+(salario * 0,25));
			alert("O antigo salario do funcionario era R$" + salario + " com o aumento passa a ser de R$" +salario_aumento) ;
		}
        else
		{
			alert("Este funcionario não faz jus ao aumento!");
		}
    </script>
</body>
</html>

<!--EXERCICIO 10--> 

<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <script>
        let  n1, n2, n3, n4;
		n1 = parseFloat(prompt("Digite a primeira nota do aluno: "));
		n2 = parseFloat(prompt("Digite a segunda nota do aluno: "));
		n3 = parseFloat(prompt("Digite a terceira nota do aluno: "));
		n4 = parseFloat(prompt("Digite a quarta nota do aluno: "));
		media= (n1+n2+n3+n4)/4;
		if (media > 6){
			alert("aprovado") ;
		}
		else if (media == 6){
			alert("recuperação");
		}
		else {
			alert("reprovado");
		}
		
	
    </script>
</body>
</html>
